:8080 {
    encode gzip zstd
    root * /var/www/html/public

    @static {
        file
        path /storage/* /assets/* *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.ico *.webp *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    php_fastcgi app:9000
    file_server

    log {
        output stdout
        format console
    }
}
